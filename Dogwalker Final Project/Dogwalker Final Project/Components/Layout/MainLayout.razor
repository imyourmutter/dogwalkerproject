@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.JSInterop

@inherits LayoutComponentBase

<div class="main-layout">
    <header>
        <nav class="nav-bar">
            <a href="/" class="logo">🐾 הולכים עם כלבים</a>

            <ul class="nav-links">
                <li><a href="/">דף הבית</a></li>
                <li><a href="/find-services">מצא שירותים</a></li>
                <li><a href="/find-dogowners">חפש בעלי כלבים</a></li>
                <li><a href="/profile">פרופיל</a></li>
                <li><a href="/contact">צור קשר</a></li>
                <li><a href="/reviews">דירוגים וחווות דעת</a></li>
                <li><a href="/admin">ניהול מערכת</a></li>
            </ul>
        </nav>
